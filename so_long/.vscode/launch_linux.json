{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug so_long",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/so_long_bonus",
        "args": ["maps/Bonus/classic.ber"],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "miDebuggerPath": "/usr/bin/gdb",
        "preLaunchTask": "build so_long",
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }